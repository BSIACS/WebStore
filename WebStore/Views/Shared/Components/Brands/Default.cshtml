@model IEnumerable<BrandViewModel>

<div class="brands_products">
    <!--brands_products-->
    <h2>Бренды</h2>
    <div class="brands-name">
        <ul class="nav nav-pills nav-stacked">
            @foreach (BrandViewModel brand in Model)
            {
                <li><a asp-controller="Catalogue" asp-action="Shop" asp-route-brandId="@brand.Id"> <span class="pull-right">(50)</span>@brand.Name</a></li>
            }            
        </ul>
    </div>
</div><!--/brands_products-->